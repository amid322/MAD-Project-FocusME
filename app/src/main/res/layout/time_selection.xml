<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".FocusTimeActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose Your Focus Time"
        android:textColor="@color/primary_text_color"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTime1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="25 min"
        android:textColor="@color/primary_text_color"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        app:cornerRadius="20dp"
        app:backgroundTint="@color/card_color"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnTime2"
        app:layout_constraintDimensionRatio="1:0.6"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTime2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="30 min"
        android:textColor="@color/primary_text_color"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        app:cornerRadius="20dp"
        app:backgroundTint="@color/card_color"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toEndOf="@id/btnTime1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:0.6"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTime3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="45 min"
        android:textColor="@color/primary_text_color"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cornerRadius="20dp"
        app:backgroundTint="@color/card_color"
        app:layout_constraintTop_toBottomOf="@id/btnTime1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnTime4"
        app:layout_constraintDimensionRatio="1:0.6"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTime4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="60 min"
        android:textColor="@color/primary_text_color"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cornerRadius="20dp"
        app:backgroundTint="@color/card_color"
        app:layout_constraintTop_toBottomOf="@id/btnTime2"
        app:layout_constraintStart_toEndOf="@id/btnTime3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:0.6"/>

    <TextView
        android:id="@+id/tvCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom"
        android:textColor="@color/primary_text_color"
        android:textSize="25sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/btnTime3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/etCustom" />

    <EditText
        android:id="@+id/etCustom"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/card_color"
        android:textColor="@color/primary_text_color"
        android:textSize="25sp"
        android:gravity="center"
        android:hint="enter time in minutes"
        android:inputType="number"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnTime3"
        app:layout_constraintStart_toEndOf="@id/tvCustom"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/primary_text_color"
        android:textSize="24sp"
        android:paddingHorizontal="60dp"
        android:paddingVertical="20dp"
        app:cornerRadius="30dp"
        app:backgroundTint="@color/card_color"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toBottomOf="@id/etCustom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>